    <div class="class-container mt-5 ml-5" style="justify-content: flex-start;">
      <%enfant.forEach((item)=>{%>
          <div class="card pt-3" style="width:250px;  margin-left: 10px; padding-bottom: 10px; border-radius: 10px;">
            <center>
              <img src="#" style="height:80px; width: 120px;">
              <div class="prenom" style="font-size: 20px;">
                <%=item.prenom%>
              </div>
              <div class="nom" style="font-size: 20px;">
                <%=item.nom%>
              </div>
              <div>
                <a class="btn btn-primary mt-2" href="/dashboard/enfant/<%=item._id%>" style="width: 150px;">Voir les détails</a>
                <%if(key){%>
                  <form action="/dashboard/delete/<%=item._id%>" method="POST">
                    <button class="btn btn-danger mt-2" href="/dashboard/enfant/<%=item._id%>" style="width: 150px;">supprimer</button>
                  </form>
                  <form action="/dashboard/restore/<%=item._id%>" method="post" class="form3">
                    <button class="btn btn-success mt-2"style="width: 150px;" aria-hidden="true" data-toggle="modal" data-target="#exampleModal">désactiver</button>
                  </form>
                  <a class="btn btn-warning mt-2" href="/dashboard/modification/<%=item._id%>" style="width: 150px;">modifier</a>
                <%}%>
              </div>
            </center>
        </div>
      <%})%>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="exampleModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
          <h5 class="modal-title">Causes de désinscription</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="form3" method="post" class="form-horizontal">
            <div class="form-group" style="margin-top: 10px;margin-left: 10px; margin-left: 50px;">
              <label for="complete"></label>
              <input type="checkbox" id="complete" name="choix" value="déménagement"><span style="margin-left: 10px;">Déménagement</span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-left: 10px;  margin-left: 50px;">
              <label for="AM"></label>
              <input type="checkbox" id="AM" name="choix" value="maladie"><span style="margin-left: 10px;">Maladie</span> 
            </div>
            <div class="form-group" style="margin-top: 10px;margin-left: 10px;  margin-left: 50px;">
              <label for="complete"></label>
              <input type="checkbox" id="PM" name="choix" value="insatisfaction"><span style="margin-left: 10px;">Insatisfaction</span> 
            </div>
            <div class="form-group w-50 mt-4 ml-5">
              <textarea id="autres"  class="form-control" placeholder="Autres" name="autre"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn btn-md btn-danger">Supprimer</button>
          </div> 
          </form>
      </div>
  
  
    </div>
