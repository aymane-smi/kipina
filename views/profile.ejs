            <p>
                <span class="text-500 ml-4">Lieu de Naissance: </span><span><%=enfant.lieu_naissance%></span>
            </p>
            <p>
                <span class="text-500 ml-4">Sexe: </span><span><%if(enfant.sexe == 1){%> Garçon <%}%>
                    <%if(enfant.sexe == 2){%>Fille<%}%></span>
            </p>
            <p>
                <span class="text-500 ml-4">nationnalite: </span><span><%=enfant.nationnalite%></span>
            </p>
            <p>
                <span class="text-500 ml-4">langues parlées: </span><span><%=enfant.langues_parlees%></span>
            </p>
            <p>
              <span class="text-500 ml-4">mère: </span><span><%=mere.nom+" "+mere.prenom%></span>
          </p>
          <p>
            <span class="text-500 ml-4">père: </span><span><%=pere.nom+" "+pere.prenom%></span>
        </p>
            <p>
                <span class="text-500 ml-4">classe: </span><span><%if(enfant.classe==1){%>
                    Swans
                  <%}%>
                  <%if(enfant.classe== 2){%>
                    Little foxes
                  <%}%>
                  <%if(enfant.classe== 3){%>
                    Foxes
                  <%}%>
                  <%if(enfant.classe== 4){%>
                    Bears
                  <%}%>
                  <%if(enfant.classe== 5){%>
                    Seals
                  <%}%>
                  <%if(enfant.classe== 6){%>
                    Owls
                  <%}%></span>
            </p>
            <p>
                <span class="text-500 ml-4">type enfant: </span><span>
                    <%if(enfant.type_eleve == 1){%>
                        Personnel
                    <%}%>
                    <%if(enfant.type_eleve == 2){%>
                        Internne
                    <%}%>
                    <%if(enfant.type_eleve == 3){%>
                        Externne
                    <%}%>
                </span>
            </p>
            
            <p>
                <span class="text-500 ml-4">Réseaux sociaux: </span><span>
