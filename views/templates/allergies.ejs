<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>cantine</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <style rel="stylesheet" type="text/css">
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;400;500;700&display=swap');
        #rapport{
            padding-left: 35%;
            font-size: 30px;
            font-weight: 700;
        }
        body{
            font-family: 'Montserrat', sans-serif;
        }
        table{
            width: 50%;
            margin: 100px auto 0 auto;
            border-collapse: collapse;
        }
        th, td{
            border: 1px solid black;
            
        }
        img{
            width: 100px;
            height: 100px;
        }
    </style>
</head>
<body>
    <img src="http://localhost:3000/img/Logo.png">
    <center>
        <p>
            <h1>Rapport Allergies</h1>
        </p>
        <div>
            total enfants avec allergies:<%=enfant.length%>
        </div>
    </center>
    <%if(!Array.isArray(classes)){classes = [classes]}%>
    <%classes.forEach((i)=>{%>
        <div><h3>classe: <%if(i==1){%>
            Swans
          <%}%>
          <%if(i == 2){%>
            Little foxes
          <%}%>
          <%if(i == 3){%>
            Foxes
          <%}%>
          <%if(i == 4){%>
            Bears
          <%}%>
          <%if(i == 5){%>
            Seals
          <%}%>
          <%if(i == 6){%>
            Owls
          <%}%></h3></div>
        <table>
            <thead>
                <tr>
                    <th scope="col">nom</th>
                    <th scope="col">prenom</th>
                    <th scope="col">allergies</th>
                </tr>
            </thead>
            <tbody>
                <%for(let j=0;j<enfant.length;j++){%>
                    <%if(enfant[j].classe == i){%>
                    <tr>
                    <td>
                        <%=enfant[j].nom%>
                    </td>
                    <td>
                        <%=enfant[j].prenom%>
                    </td>
                    <td>
                        <%=allergies[j]%>
                    </td>
                </tr>
                <%}%>
                <%}%>
            </tbody>
        </table>
    <%});%>
</body>
</html>