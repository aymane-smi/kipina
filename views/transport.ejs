<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>cantine</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <style rel="stylesheet" type="text/css">
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;400;500;700&display=swap');
        .grid{
            display: grid;
            grid-template-columns: auto;
        }
        .container{
            margin: 0 auto;
        }
        #rapport{
            padding-left: 35%;
            font-size: 30px;
            font-weight: 700;
        }
        html{
            height:100%;
        }
        body{
            min-height: 100%;
            background-image: url(http://localhost:3000/img/Background.png);
            background-attachment: fixed;
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
            min-height: 100%;
            overflow-x: hidden;
            font-family: 'Montserrat', sans-serif;
        }
        table{
            width: 50%;
            margin: 100px auto 0 auto;
            border-collapse: collapse;
            border-radius: 20px;
        }
        th, td{
            border: 2px solid rgb(184, 180, 180);
            
        }
        .left-border1{
            flex:1;
            background: linear-gradient(to top, blue, rgb(39, 39, 252));
        }
        .left-border2{
            flex:1;
            background: linear-gradient(to top, rgb(255, 166, 0), rgb(252, 124, 39));
        }
        .card{
            overflow: hidden;
            display: flex;
            flex-direction: row;
            border-radius: 20px;
            box-shadow: 6px 6px 15px rgba(113, 113, 113, 0.23);
            width: 200px;
        }
        .card-content{
            flex:6;
        }
    </style>
</head>
<body>
    <div class="container">
        <p id="rapport">
            Rapport Transport
        </p>
        <div class="grid">
            <div class="card">
                <div class="left-border1"></div>
                <div class="card-content">
                    total enfants avec service de transport:<%=enfant.length%>
                </div>
            </div>
        </div>
    </div>
    <%for(let i=1;i<classes.length+1;i++){%>
        <div> classe: <%=i%></div>
        <table>
            <thead>
                <tr>
                    <th scope="col">NÂ°</th>
                    <th scope="col">nom</th>
                    <th scope="col">prenom</th>
                    <th scope="col">type transport</th>
                </tr>
            </thead>
            <tbody>
                
                <%let j=0;%>
                <%enfant.forEach((enfant)=>{%>
                    <%j++;%>
                    <%if(enfant.classe == i){%>
                    <tr>
                    <th class="row">
                        <%=j%>
                    </th>
                    <td>
                        <%=enfant.nom%>
                    </td>
                    <td>
                        <%=enfant.prenom%>
                    </td>
                    <td>
                        <%if(enfant.type_transport == 1)}%>
                            aller
                        <%}%>
                        <%if(enfant.type_transport == 2)}%>
                            retour
                        <%}%>
                        <%if(enfant.type_transport == 3)}%>
                            aller-routour
                        <%}%>
                    </td>
                </tr>
                <%}%>
                <%});%>
            </tbody>
        </table>
    <%};%>
</body>
</html>