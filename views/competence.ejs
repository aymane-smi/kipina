      <div class="container" style="margin-top: -60px; margin-bottom: 20px; margin-left: 50px;">
        <center>
        <div class="jumbotron modified-jumbotron">
          <center>
            <p class="big-font" style="font-size:40px;line-height: 1.2;">
                Remplire la liste des compétence
            </p>
            </center>
            <form action="/competence" method="post" enctype="multipart/form-data">
              <div class="form-group" style="margin-top: 20px;">
                <p>Enfant:</p>
                <select name="enfant" style="width: 226px;transform: translateY(-15px);">
                  <%enfant.forEach((id)=>{%>
                    <option value="<%=id._id%>"><%=id.nom+" "+id.prenom%></option>
                  <%})%>
                </select>
                </div>
                <div class="form-group" style="margin-top: 20px;">
                  <p>Domaine de compétence:</p>
                  <select name="domaine_competence" style="width: 226px;transform: translateY(-15px);">
                    <option value="1">Compétence 1</option>
                    <option value="2">Compétence 2</option>
                    <option value="3">Compétence 3</option>
                    <option value="4">Compétence 4</option>
                    <option value="5">Compétence 5</option>
                    <option value="6">Compétence 6</option>
                  </select>
                  </div>
                <div class="form-group" style="margin-top: 20px;">
                  <p>Compétence:</p>
                  <select name="sous_domaine" style="width: 226px;transform: translateY(-15px);">
                    <%sous_competence.forEach((sc)=>{%>
                      <option value="<%sc.nom%>"><%=sc.nom%></option>
                    <%})%>
                    <option value="test" selected>test</option>
                    <option value="ajouter">Ajouter une compétence</option>
                  </select>
                </div>
                <center>
                  <div class="form-group w-50 nv" style="margin-top: 10px;display: none;">
                    <input type="text" class="form-control" placeholder="Nouvelle compétence" name="nv_competence">
                  </div>
              <div class="form-group" style="margin-top: 25px;">
                <label for="image" class="btn btn-md btn-success" style="background:#8ce647; border:0px; border-radius: 24px;">Choisissez une image</label>
                <input type="file" name="image_competence" id="image" style="display:none;">
              </div>
              <div class="form-group w-50" style="margin-top: 15px;">
                <textarea placeholder="Description de la compétence" class="form-control" name="competence"></textarea>
              </div>
                <button type="submit" class="btn btn-success" style="margin-top: 30px; background:#8ce647; border:0px;border-radius: 24px;">ajouter!</button>
              </form>
            </div>
          </center>
        </div>
      </center>
      </form>
      </div>
      </section>
      <script src="/scripts/dashboard.js"></script>
      <script>
        document.querySelector("select[name='sous_domaine']").addEventListener("click", (event)=>{
          if(event.target.value == 'ajouter'){
            console.log("were in");
            document.querySelector('.nv').style.display = "block";
          }else{
            console.log("were out");
            document.querySelector('.nv').style.display = "none";
          }
        });
      </script>
